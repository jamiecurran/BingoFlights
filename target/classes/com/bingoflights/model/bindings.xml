<?xml version="1.0"?>
<xml-bindings xmlns="http://www.eclipse.org/eclipselink/xsds/persistence/oxm" version="2.4" package-name="com.bingoflights.model">
    <java-types>
        <java-type name="Flights">
            <xml-root-element name="flights" />
            <java-attributes>
                <xml-element java-attribute="flights" name="flights" type="com.bingoflights.model.Flight" container-type="java.util.ArrayList"/>
            </java-attributes>
        </java-type>
        <java-type name="Flight">
            <java-attributes>
                <xml-attribute java-attribute="flightNumber"  name="number"  type="java.lang.String"/>
                <xml-element java-attribute="carrier" type="java.lang.String" xml-path="carrier/name/text()"/>
                <xml-element java-attribute="departure" type="com.bingoflights.model.Location"/>
                <xml-element java-attribute="destination" type="com.bingoflights.model.Location"/>
            </java-attributes>
        </java-type>
        <java-type name="Location">
            <java-attributes>
                <xml-element java-attribute="country" type="java.lang.String"/>
                <xml-element java-attribute="city" type="java.lang.String"/>
                <xml-element java-attribute="airport" type="com.bingoflights.model.Airport"/>
                <xml-element java-attribute="time" type="java.util.Date"/>
            </java-attributes>
        </java-type>
        <java-type name="Airport">
            <java-attributes>
                <xml-attribute java-attribute="code" name="code" type="java.lang.String"/>
                <xml-element java-attribute="name" type="java.lang.String"/>
            </java-attributes>
        </java-type>
    </java-types>
</xml-bindings>